@using Microsoft.Extensions.Localization

@inject IStringLocalizer<Texts> Localizer

<Router AppAssembly="@typeof(App).Assembly">
	<Found Context="routeData">
		<RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
		<FocusOnNavigate RouteData="@routeData" Selector="h1"/>
	</Found>
	<NotFound>
		<PageTitle>@this.Localizer["NotFound"] - @this.Localizer["Vicente"]</PageTitle>
		<LayoutView Layout="@typeof(MainLayout)">
			<div class="card pt-5 pb-5">
				<div class="card-body text-center">
					<h1 class="display-3">@this.Localizer["NotFound"]</h1>
				</div>
			</div>
			<div class="container-fluid p-auto pt-5 pb-5">
				<div class="card p-auto">
					<div class="card-body text-center">
						<p class="card-title">@this.Localizer["NotFoundCaption"]</p>
					</div>
				</div>
			</div>
		</LayoutView>
	</NotFound>
</Router>